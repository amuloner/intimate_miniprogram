.search_row {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.search_row .search_input {
  width: 80%;
  height: 60rpx;
  background-color: #adadad4a;
  display: flex;
  justify-content: center;
  border-radius: 50rpx;
}
.search_row .search_input .search_icon {
  height: 100%;
  flex: 1;
}
.search_row .search_input input {
  height: 100%;
  flex: 8;
  font-size: 32rpx;
}
.search_row .search_btn {
  height: 50rpx;
  width: 100rpx;
  color: black;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
}
.search_row .exit {
  border: 1rpx solid rgba(42, 42, 42, 0.378);
  background-color: white;
}
.search_row .commit {
  border: 1rpx solid transparent;
  background-color: rgba(255, 166, 0, 0.655);
}
.search_hot {
  margin: 50rpx auto;
  width: 95%;
}
.search_hot .title {
  height: 80rpx;
  font-size: 32rpx;
  color: black;
}
.search_hot .content {
  display: flex;
  flex-wrap: wrap;
}
.search_hot .content > view {
  margin-left: 25rpx;
  margin-bottom: 25rpx;
  padding: 10rpx 20rpx;
  background-color: #adadad4a;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-radius: 50rpx;
}
.search_nav .nav_title {
  display: flex;
  padding: 10rpx;
  height: 100rpx;
  font-size: 30rpx;
}
.search_nav .nav_title .nav_item {
  width: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_nav .nav_title .nav_item > text {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  color: rgba(0, 0, 0, 0.53);
}
.search_nav .nav_title .nav_item .active {
  color: black;
  font-size: 35rpx;
  font-weight: bold;
  border-bottom: 10rpx solid orange;
}
scroll-view {
  height: 81.5vh;
  background-color: #adadad28;
}
scroll-view .item_content {
  margin-bottom: 20rpx;
  background-color: white;
}
scroll-view .item_content .item_title {
  height: 80rpx;
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.204);
}
scroll-view .item_content .con_item {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
scroll-view .item_content .con_item > view {
  width: 95%;
  height: 80%;
  display: flex;
}
scroll-view .item_content .con_item > view .con_item_left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
scroll-view .item_content .con_item > view .con_item_left image {
  height: 85%;
  width: 85%;
}
scroll-view .item_content .con_item > view .con_item_right {
  flex: 5;
}
scroll-view .item_content .con_item > view .con_item_right > view:first-child {
  height: 40rpx;
  display: flex;
  justify-content: space-between;
}
scroll-view .item_content .con_item > view .con_item_right > view:first-child .con_name {
  font-size: 35rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
scroll-view .item_content .con_item > view .con_item_right > view:first-child .con_address {
  display: flex;
  align-items: center;
  color: black;
  font-size: 30rpx;
}
scroll-view .item_content .con_item > view .con_item_right > view:first-child .con_address > icon {
  display: flex;
  align-items: flex-end;
  height: 35rpx;
  font-size: 20rpx;
}
scroll-view .item_content .con_item > view .con_item_right .con_intro {
  font-size: 30rpx;
  color: black;
  overflow: hidden;
}
scroll-view .item_content .con_item > view .con_item_right .con_detail {
  display: flex;
  font-size: 28rpx;
  height: 30%;
  align-items: flex-end;
  color: rgba(0, 0, 0, 0.596);
}
scroll-view .item_content .con_item > view .con_item_right .con_detail > view {
  margin-right: 30rpx;
}
scroll-view .item_content .essay_item {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
scroll-view .item_content .essay_item > view {
  width: 95%;
  height: 80%;
  display: flex;
}
scroll-view .item_content .essay_item > view .essay_item_left {
  flex: 1.2;
  display: flex;
  justify-content: center;
  align-items: center;
}
scroll-view .item_content .essay_item > view .essay_item_left image {
  height: 85%;
  width: 85%;
}
scroll-view .item_content .essay_item > view .essay_item_right {
  flex: 4;
}
scroll-view .item_content .essay_item > view .essay_item_right .essay_title {
  font-size: 35rpx;
  font-weight: bold;
  height: 70%;
  display: flex;
  align-items: center;
}
scroll-view .item_content .essay_item > view .essay_item_right .essay_detail {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  height: 30%;
  align-items: flex-end;
  color: rgba(0, 0, 0, 0.596);
}
scroll-view .item_content .essay_item > view .essay_item_right .essay_detail .essay_likes > icon {
  margin-left: 10rpx;
}
scroll-view .item_content .cvs_item {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
scroll-view .item_content .cvs_item > view {
  width: 95%;
  display: flex;
}
scroll-view .item_content .cvs_item > view .cvs_item_left {
  flex: 1.2;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
scroll-view .item_content .cvs_item > view .cvs_item_left image {
  height: 80rpx;
  width: 80%;
  border-radius: 50%;
}
scroll-view .item_content .cvs_item > view .cvs_item_right {
  flex: 8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
scroll-view .item_content .cvs_item > view .cvs_item_right .cvs_title {
  font-size: 36rpx;
  font-weight: bolder;
}
scroll-view .item_content .cvs_item > view .cvs_item_right .cvs_content {
  font-size: 32rpx;
  color: #474747;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 18px;
  margin-bottom: 20rpx;
}
scroll-view .item_content .test_item {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(204, 204, 204, 0.122);
}
scroll-view .item_content .test_item .evaluation_item {
  height: 180rpx;
  width: 95%;
  display: flex;
  justify-content: flex-start;
}
scroll-view .item_content .test_item .evaluation_item .item_left {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
scroll-view .item_content .test_item .evaluation_item .item_left image {
  border-radius: 10rpx;
  width: 80%;
  height: 80%;
}
scroll-view .item_content .test_item .evaluation_item .item_left .item_label {
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  border: 5rpx solid #489ff0;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #fff;
  color: #489ff0;
  bottom: 12rpx;
  right: -2rpx;
}
scroll-view .item_content .test_item .evaluation_item .item_right {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: start;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_top {
  flex: 3;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_top .item_title {
  font-weight: 900;
  font-size: 35rpx;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_top .item_text {
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 600;
  font-size: 25rpx;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_bottom {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 10rpx;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_bottom .item_likes {
  font-size: 30rpx;
  color: coral;
}
scroll-view .item_content .test_item .evaluation_item .item_right .item_left_bottom .item_userNum {
  color: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
}
scroll-view .item_content .item_footer {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-top: 1px solid rgba(128, 128, 128, 0.238);
}
scroll-view .item_content .item_footer > text {
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
