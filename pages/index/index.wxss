.content {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.093);
}
.content .hot_swiper {
  height: 35vh;
  width: 100%;
}
.content .hot_swiper .swiper_img {
  height: 100%;
  width: 100%;
}
.content .quickEntry {
  width: 100%;
  height: 25vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.content .quickEntry > view {
  width: 100%;
  height: 90%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.content .quickEntry > view .entry {
  height: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
}
.content .quickEntry > view .enquiryEntry {
  width: 46%;
  background-color: #d9db37;
}
.content .quickEntry > view .otherEntry {
  width: 50%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.content .quickEntry > view .otherEntry > navigator {
  border-radius: 20rpx;
  width: 100%;
  height: 45%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.175);
}
.content .quickEntry > view .otherEntry .essayEntry {
  background-color: #06dc06;
}
.content .quickEntry > view .otherEntry .topicEntry {
  background-color: rgba(28, 28, 253, 0.623);
}
.content .hot_essay {
  margin-top: 20rpx;
  height: 500rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  padding-left: 30rpx;
}
.content .hot_essay .hot_essay_top {
  flex: 1;
}
.content .hot_essay .hot_essay_bottom {
  flex: 3;
  white-space: nowrap;
}
.content .hot_essay .hot_essay_bottom > scroll-view {
  height: 375rpx;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent {
  height: 100%;
  width: 280rpx;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item {
  display: inline-block;
  height: 100%;
  width: 280rpx;
  margin-right: 10rpx;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item .itemImage {
  height: 75%;
  width: 100%;
  position: relative;
  background-color: lightblue;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item .itemImage > image {
  border-radius: 15rpx;
  height: 100%;
  width: 100%;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item .itemImage > view {
  position: absolute;
  bottom: 0rpx;
  left: 10rpx;
  color: rgba(255, 255, 255, 0.634);
  font-size: 25rpx;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item .itemTitle {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 25%;
  width: 100%;
}
.content .hot_essay .hot_essay_bottom > scroll-view .listContent .item .itemTitle > text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
  font-size: 28rpx;
  font-weight: bolder;
  width: 100%;
}
.content .text {
  height: 50rpx;
  display: flex;
  align-items: center;
  font-family: "华文新魏";
  font-weight: 900;
  font-size: 45rpx;
}
.content .text .texticon {
  display: inline-block;
  width: 15rpx;
  height: 40rpx;
  background-color: red;
}
.content .text > text:last-child {
  color: red;
}
.content .title {
  margin-top: 10rpx;
  padding-left: 20rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 600;
  font-size: 23rpx;
}
.content .person_evaluation {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx 0 30rpx;
}
.content .person_evaluation .person_evaluation_top {
  height: 100rpx;
}
.content .person_evaluation .py_container {
  width: 100%;
}
.content .person_evaluation .py_container > view {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content .person_evaluation .py_container > view .evaluation_item {
  height: 80%;
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: start;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_top {
  flex: 3;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_top .item_title {
  font-family: "华文新魏";
  font-weight: 900;
  font-size: 40rpx;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_top .item_text {
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 600;
  font-size: 25rpx;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_bottom {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 10rpx;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_bottom .item_likes {
  font-size: 30rpx;
  color: coral;
}
.content .person_evaluation .py_container > view .evaluation_item .item_left .item_left_bottom .item_userNum {
  color: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
}
.content .person_evaluation .py_container > view .evaluation_item .item_right {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.content .person_evaluation .py_container > view .evaluation_item .item_right image {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}
.content .person_evaluation .py_container > view .evaluation_item .item_right .item_label {
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  border: 5rpx solid #489ff0;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #fff;
  color: #489ff0;
  bottom: 5rpx;
  right: -5rpx;
}
.content .person_evaluation .footer {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .person_evaluation .footer > text {
  font-size: 50rpx;
}
