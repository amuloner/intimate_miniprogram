.search_content {
  margin-top: 80rpx;
  display: flex;
}
.search_content .left_menu {
  height: 92.5vh;
  flex: 1;
  background-color: rgba(192, 192, 192, 0.282);
}
.search_content .left_menu .menu_item {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-right: 1rpx solid rgba(192, 192, 192, 0.282);
}
.search_content .left_menu .menu_item > text {
  text-align: center;
  width: 90%;
}
.search_content .left_menu .active {
  font-size: 35rpx;
  font-weight: bolder;
  background-color: #fff;
}
.search_content .left_menu .active > text {
  border-left: 10rpx solid #dbdb20;
}
.search_content .right_content {
  background-color: white;
  flex: 4;
}
.search_content .right_content .right_nav {
  display: flex;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(192, 192, 192, 0.282);
  justify-content: space-between;
  align-items: center;
}
.search_content .right_content .right_nav .nav_left {
  flex: 2;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.511);
}
.search_content .right_content .right_nav .nav_right {
  flex: 1;
}
.search_content .right_content .right_menu {
  height: 83.2vh;
  width: 100%;
}
.search_content .right_content .right_menu .listContent {
  height: 100%;
  width: 100%;
}
.search_content .right_content .right_menu .listContent .right_item {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  background-color: rgba(204, 204, 204, 0.122);
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item {
  height: 180rpx;
  width: 95%;
  display: flex;
  justify-content: flex-start;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: start;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_top {
  flex: 3;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_top .item_title {
  font-weight: 900;
  font-size: 35rpx;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_top .item_text {
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 600;
  font-size: 25rpx;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_bottom {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 10rpx;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_bottom .item_likes {
  font-size: 30rpx;
  color: coral;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_left .item_left_bottom .item_userNum {
  color: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_right {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_right image {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}
.search_content .right_content .right_menu .listContent .right_item .evaluation_item .item_right .item_label {
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  border: 5rpx solid #489ff0;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #fff;
  color: #489ff0;
  bottom: 5rpx;
  right: -5rpx;
}
