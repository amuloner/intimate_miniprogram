.intro_page {
  height: 100vh;
  width: 100vw;
  background-color: #dddddd;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.intro_page .intro_page_content {
  margin-top: 40rpx;
  height: 50%;
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
}
.intro_page .intro_page_content .content_top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.intro_page .intro_page_content .content_top .title {
  height: 150rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.intro_page .intro_page_content .content_top .content {
  width: 95%;
  display: flex;
  justify-content: center;
  flex: 3;
  font-size: 34rpx;
  text-indent: 70rpx;
  line-height: 80rpx;
}
.intro_page .intro_page_btn {
  margin-top: 20rpx;
  height: 120rpx;
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.intro_page .intro_page_btn > view {
  height: 80rpx;
  width: 300rpx;
  background-color: #1fb1f4;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.form_page {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.form_page .form_userinfo {
  width: 100%;
  height: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.form_page .form_userinfo .userImg > image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 12rpx;
}
.form_page .form_userinfo .username {
  font-size: 36rpx;
  color: #a5a5a5;
}
.form_page .form_page_content {
  margin-top: 20rpx;
  width: 95%;
}
.form_page .form_page_content .form_input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #b9b9b9;
  height: 80rpx;
}
.form_page .form_page_content .form_input .form_input_text {
  width: 70%;
}
.form_page .form_page_content .form_input .form_input_text > input {
  font-size: 32rpx;
}
.form_page .form_page_content .form_file {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #b9b9b9;
  height: 100rpx;
}
.form_page .form_page_content .form_file .form_file_name {
  width: 300rpx;
  margin-left: 50rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.form_page .form_page_content .form_file .form_file_name:hover {
  overflow: visible;
}
.form_page .form_page_content .form_file .form_file_text {
  width: 200rpx;
  display: flex;
  justify-content: center;
}
.form_page .form_page_content .form_file .form_file_text .file_choose {
  border-radius: 12rpx;
  background-color: #E7E7E7;
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
.form_page .form_page_content .from_btn {
  position: absolute;
  bottom: 18%;
  left: 50%;
  transform: translate(-50%);
}
